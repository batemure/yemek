<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;"><%=yemek.adi%> hakkında görüşleriniz</h1>
			<div style="width: 30%; margin:30px auto;">
				<form action="/yemekler/<%=yemek._id%>/yorumlar" method="POST">
					<div class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
						
						<input class="form-control" type="text" name="yorum[text]" placeholder="Yorum">
					</div>

					<div class="input-group" >
						<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
						<input class="form-control" type="text" name="yorum[yazar]" placeholder="Yazar">
					</div>					
					<div class="form-group">
						<button type="submit" class="btn btn-primary">Yorumu yayınla</button>
					</div>					
				</form>
				<a href="/yemekler">Yemekler</a>
			</div>		
	</div>
</div>


<% include ../partials/footer %>